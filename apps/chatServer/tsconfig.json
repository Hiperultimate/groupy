{
  "extends" : "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strictNullChecks": true
  },
  "include": [
    ".eslintrc.cjs",
    "types.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs"
  ]
}
